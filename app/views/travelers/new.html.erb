<h1 class="new-traveler-account">✈️ Create Your Free SafeTravels Account Now! 😀</h1>
<div class= "form sign-up">
<% if flash[:errors] %>
<% flash[:errors].each do |e| %>
<%= e %>
<% end %>
<% end %>

<%= form_for @traveler do |f| %>

<div class="form-fields">
    <%= f.text_field :username, placeholder: "Username" %><br>
</div>

<div class="form-fields">
    <%= f.date_field :dob, placeholder: "D/O/B" %><br>
</div> 
<div class="form-fields">
    <%= f.password_field :password, placeholder: "Password" %><br>
</div>
<div class="form-fields">
    <%= f.text_area :about_me, placeholder: "Tell us a little about yourself..." %><br>
</div>
<div class="form-fields">
    <%= f.text_field :img_url, placeholder: "URL for profile photo" %> 
</div>   
<div class="form-submit">
     <%= f.submit "Create Account" %>
</div>
    <% end%>
<div class="form-fields">
     <button class="right"><%= link_to "Already have an account?",  new_login_path%>
</div>

</div>

